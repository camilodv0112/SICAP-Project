<Window x:Class="Presentacion.Views.PrincipalWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion.Views"
        xmlns:vm="clr-namespace:Presentacion.ViewModels"
        xmlns:views="clr-namespace:Presentacion.Views"
        mc:Ignorable="d"
        Title="SICAP - Dashboard" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <!-- DataTemplates para mapear ViewModels a Vistas -->
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:HomeUserControlView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PersonalViewModel}">
            <views:PersonalUserControlView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EstudiantesViewModel}">
            <views:EstudiantesUserControlView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EventosViewModel}">
            <views:EventosUserControlView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:CartasViewModel}">
            <views:CartasUserControlView/>
        </DataTemplate>

        <!-- Estilo para Botones de la Barra Lateral -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#111111"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Margin="10,0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#002898"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Image Grid.Row="0" Source="/Recursos/universidad_nacional_de_ingenieria.png" 
                       Margin="30,40,30,40" 
                       HorizontalAlignment="Center" 
                       Height="100" Stretch="Uniform"/>

                <!-- Menú -->
                <StackPanel Grid.Row="1" Margin="0,10">
                    <Button Command="{Binding NavigateToHomeCommand}" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏠" Foreground="#002898" Margin="0,0,15,0" FontSize="16"/>
                            <TextBlock Text="Inicio"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding NavigateToPersonalCommand}" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👥" Foreground="#002898" Margin="0,0,15,0" FontSize="16"/>
                            <TextBlock Text="Gestión de Personal"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding NavigateToEstudiantesCommand}" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎓" Foreground="#002898" Margin="0,0,15,0" FontSize="16"/>
                            <TextBlock Text="Gestión de Estudiantes"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding NavigateToEventosCommand}" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅" Foreground="#002898" Margin="0,0,15,0" FontSize="16"/>
                            <TextBlock Text="Gestión de Eventos"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding NavigateToCartasCommand}" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝" Foreground="#002898" Margin="0,0,15,0" FontSize="16"/>
                            <TextBlock Text="Cartas"/>
                        </StackPanel>
                    </Button>
                 </StackPanel>
                
                <!-- Footer Sidebar -->
                <StackPanel Grid.Row="2" Margin="0,0,0,30">
                    <TextBlock Text="SICAP v1.0" 
                               FontFamily="Arial" FontSize="12" Foreground="#757575" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="© 2025 UNI" 
                               FontFamily="Arial" FontSize="10" Foreground="#9E9E9E" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="0"/>
    </Grid>
</Window>
